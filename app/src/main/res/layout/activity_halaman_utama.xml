<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutUtama"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical">
    tools:context=".HalamanUtama">

    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_700"
            android:gravity="center"
            android:text="Menu Makanan"
            android:textSize="20pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5pt"
        android:layout_marginTop="5pt"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:layout_marginRight="5pt"
            android:background="@drawable/background_menu"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fries"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:onClick="klik_gambar"
                app:srcCompat="@drawable/fries" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="French Fries"
                android:textSize="12pt" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_menu"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/burger"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:onClick="klik_gambar"
                app:srcCompat="@drawable/burger" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Burger"
                android:textSize="12pt" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7pt"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5pt"
            android:background="@drawable/background_menu"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kopi"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:onClick="klik_gambar"
                app:srcCompat="@drawable/coffee" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kopi"
                android:textSize="12pt" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80pt"
            android:layout_height="wrap_content"
            android:background="@drawable/background_menu"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/orangejuice"
                android:layout_width="70pt"
                android:layout_height="70pt"
                android:onClick="klik_gambar"
                app:srcCompat="@drawable/orangejuice" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orange Juice"
                android:textSize="12pt" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>